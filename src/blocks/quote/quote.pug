//- Все примеси в этом файле должны начинаться c имени блока (quote)

mixin quote(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +quote('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' quote--' + modsList[i].trim();
      }
    }

  figure.quote(class=allMods)&attributes(attributes)
    .quote__inner.inner
      block
