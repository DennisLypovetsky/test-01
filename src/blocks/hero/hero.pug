//- Все примеси в этом файле должны начинаться c имени блока (hero)

mixin hero(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +hero('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' hero--' + modsList[i].trim();
      }
    }

  section.hero(class=allMods)&attributes(attributes)
    .hero__inner.inner
      header.hero__heading.heading
        h1.heading__title Simple PSD template with cool stuff
        p.heading__text Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        button.heading__button.button
          span explore template
